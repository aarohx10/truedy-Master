# Hetzner VPS Environment Variables Template
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=production
DEBUG=false

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Clerk Authentication
CLERK_SECRET_KEY=your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_WEBHOOK_SECRET=your-clerk-webhook-secret

# File Storage (Hetzner VPS)
FILE_STORAGE_PATH=/mnt/storage
FILE_SERVER_URL=https://api.truedy.ai
# Legacy S3 bucket names (for backward compatibility)
S3_BUCKET_UPLOADS=trudy-uploads
S3_BUCKET_RECORDINGS=trudy-recordings

# Encryption Key (32-byte key or passphrase)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# External APIs
ULTRAVOX_API_KEY=your-ultravox-api-key
ULTRAVOX_BASE_URL=https://api.ultravox.ai/v1
STRIPE_SECRET_KEY=your-stripe-secret-key
TELNYX_API_KEY=your-telnyx-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Webhooks
ULTRAVOX_WEBHOOK_SECRET=your-ultravox-webhook-secret
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
TELNYX_WEBHOOK_SECRET=your-telnyx-webhook-secret
WEBHOOK_SIGNING_SECRET=your-webhook-signing-secret

# Logging
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Idempotency
IDEMPOTENCY_TTL_DAYS=7

# Internal API
INTERNAL_API_KEY=your-internal-api-key-here

# Hetzner Domain (for CORS)
HETZNER_DOMAIN=https://api.truedy.ai
